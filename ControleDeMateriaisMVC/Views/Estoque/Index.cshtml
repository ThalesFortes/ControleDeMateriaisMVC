@model IEnumerable<ControleDeMateriaisAPI.Models.Estoque>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotaFiscal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotaFiscal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produto.IdProduto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEstoque">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdEstoque">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEstoque">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
